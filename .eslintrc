{
  "extends": ["react-app", "prettier", "prettier/react"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "plugins": ["jsx-a11y", "prettier"],
  "rules": {
    "linebreak-style": "off",
    "no-plusplus": [
      2,
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".ts", ".tsx"]
      }
    ]
  }
}
